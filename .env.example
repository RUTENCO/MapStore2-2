# SAT Sistema de Alerta Temprana
LOG_LEVEL=INFO
# RUN_ON_START: true para ejecutar inmediatamente, false para que corra solo con el cron
RUN_ON_START=false
IDEAM_API_TOKEN=your_ideam_api_token_here
MODEL_URL=https://drive.google.com/uc?export=download&id=1gSDPM7g25Gn_Ql6vUCl0XMhmyUzCdMJ5
DAYS_BACK=30
INTERPOLATION_METHOD=idw
PIXEL_SIZE=2000
IDW_POWER=3
# CRON_SCHEDULE: 1:00 AM hora local colombiana (con TZ=America/Bogota en el contenedor)
CRON_SCHEDULE=00 01 * * *

# Frontend Environment Variables
WEB3FORMS_ACCESS_KEY=your_web3forms_access_key_here
